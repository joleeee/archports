svname=dwm
pkgname=$svname-s6
pkgver=0.1
pkgrel=2
pkgdesc="$svname s6 service"
arch=('x86_64' 'aarch64')
depends=($svname)
_commit="e0f4161d6f7610c61bc50600c91566f50f95e24c"
_path="s6-services-$_commit"
source=(https://git.jole.xyz/s6-services/snapshot/$_path.tar.bz2)
sha256sums=('cbf11a145fb645b51ac5e4a5512a451aeb096a098207ff8d31e2607154428e9f')

package() {
	cd "$srcdir/$_path/sv"
	local target="$pkgdir/etc/s6/sv"
	mkdir -p "$target"
	cp -r "$svname" "$target"
}
