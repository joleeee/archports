svname=slstatus
pkgname=$svname-s6
pkgver=0.1
pkgrel=1
pkgdesc="$svname s6 service"
arch=('x86_64' 'aarch64')
depends=($svname)
_commit="5596f5920d7bc5f6dbdb455f4a1718954359980a"
_path="s6-services-$_commit"
source=(https://git.jole.xyz/s6-services/snapshot/$_path.tar.bz2)
sha256sums=('1da67ffb342f1edfa5f87aef14c4dd47cb0483c90a8f5c96ed2631bb71d03ae8')

package() {
	cd "$srcdir/$_path/sv"
	local target="$pkgdir/etc/s6/sv"
	mkdir -p "$target"
	cp -r "$svname" "$target"
}
